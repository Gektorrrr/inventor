<p style="color: green"><%= notice %></p>

<h1>Order items</h1>
<%= form_tag(orders_path, method: "get") do %>
  <%= text_field_tag(:search, params[:search], placeholder: "Поиск по заказчику") %>
  <%= submit_tag("Поиск") %>
<% end %>
<div id="order_items">
  <% @order_items.each do |order_item| %>
    <%= render order_item %>
    <p>
      <%= link_to "Show this order item", order_item %>
    </p>
  <% end %>
</div>

<%= link_to "New order item", new_order_item_path %>
<%= link_to 'На головну', root_path, class: 'btn btn-primary' %>
